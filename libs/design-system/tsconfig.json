{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "outDir": "./dist",
    "declaration": true,
    "target": "es2018"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "index.ts", "index.tsx"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
